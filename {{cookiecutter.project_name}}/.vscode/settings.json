{
  "terminal.integrated.shell.linux": "/bin/bash",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  // JSON
  "[json]": {
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
  },
  // JSON with Comments
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
  },
  // Python
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.pythonPath": "/usr/local/bin/python3",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": false,
  "python.envFile": "${workspaceFolder}/src/.env",
  "python.formatting.blackArgs": [
    "--line-length",
    "100"
  ],
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_pytest"
  ],
  "python.linting.pylintUseMinimalCheckers": false,
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.analysis.extraPaths": [
    "/usr/local/lib/python3.8/site-packages",
    "src/{{cookiecutter.python_package_name}}"
  ],
  "python.sortImports.args": [
    "--project={{cookiecutter.python_package_name}}"
  ],
  "autoDocstring.docstringFormat": "sphinx",
  "autoDocstring.customTemplatePath": "/workspace/.vscode/docstring.mustache",
  // Shell
  "[shellscript]": {
    "editor.formatOnSave": true
  },
  // Dockerfile
  "[dockerfile]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true,
    "editor.tabSize": 8,
    "editor.detectIndentation": false
  },
  "shellformat.path": "/usr/bin/shfmt",
  "shellformat.flag": "-sr -ci -kp",
  "shellformat.effectLanguages": [
    "shellscript",
    "dotenv"
  ]
}
